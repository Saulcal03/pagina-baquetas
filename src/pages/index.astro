---
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';
import products from '../data/products.json';

// Tomamos solo los primeros 3 productos para una sección de "Destacados"
const featuredProducts = products.slice(0, 3);
---

<Layout title="GEMES M-3 | Precision Drumsticks">
    
    <section class="relative h-[85vh] w-full bg-black overflow-hidden flex items-center justify-center">
        <div class="absolute inset-0 z-0">
            <img 
                src="/images/hero-gemes.jpg" 
                alt="Baquetas GEMES M-3" 
                class="w-full h-full object-cover grayscale brightness-40 contrast-125 scale-105"
            />
            <div class="absolute inset-0 bg-black/40"></div> 
            <div class="absolute inset-0 bg-gradient-to-t from-gemes-black via-transparent to-transparent"></div>
        </div>

        <div class="relative z-10 text-center px-4 max-w-5xl mx-auto">
            <h2 class="text-gemes-gold tracking-[0.2em] text-lg md:text-xl font-bold uppercase mb-4 animate-fadeIn">
                Professional Drumsticks
            </h2>
            <h1 class="font-heading text-6xl md:text-8xl lg:text-9xl text-white font-bold uppercase leading-none mb-8 drop-shadow-lg">
                PERFECT <br/> <span class="text-transparent bg-clip-text bg-gradient-to-b from-white to-gray-500">BALANCE</span>
            </h1>
            <div class="flex flex-col md:flex-row gap-4 justify-center mt-8">
                <a href="#catalogo" class="bg-gemes-gold text-black font-heading font-bold uppercase tracking-wider py-4 px-10 text-xl hover:bg-white transition-colors duration-300">
                    Ver Catálogo
                </a>
                <a href="#artistas" class="border-2 border-white text-white font-heading font-bold uppercase tracking-wider py-4 px-10 text-xl hover:bg-white hover:text-black transition-colors duration-300">
                    Artistas GEMES
                </a>
            </div>
        </div>
    </section>

    <section class="bg-gemes-black py-20 px-4">
        <div class="max-w-7xl mx-auto">
            <h3 class="font-heading text-4xl text-white uppercase mb-10 border-l-8 border-gemes-gold pl-6">
                Explora por Serie
            </h3>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 h-auto md:h-[600px]">
                
                <div class="group relative col-span-1 md:col-span-2 row-span-2 bg-zinc-900 overflow-hidden cursor-pointer border border-zinc-800">
                    <video autoplay loop muted playsinline class="w-full h-full object-cover opacity-60 group-hover:opacity-80 group-hover:scale-105 transition-all duration-700">
                        <source src="/videos/video-baquetas.mp4" type="video/mp4">
                    </video>
                    <div class="absolute bottom-0 left-0 p-8 z-10">
                        <h4 class="font-heading text-4xl text-white uppercase italic transform group-hover:-translate-y-2 transition-transform drop-shadow-lg">American Hickory</h4>
                        <p class="text-gemes-gold mt-2 opacity-0 group-hover:opacity-100 transition-opacity font-bold text-lg">El estándar de la industria</p>
                    </div>
                </div>

                <div class="group relative bg-zinc-900 overflow-hidden cursor-pointer border border-zinc-800">
                    <img src="/images/logo.jpg" alt="Signature" class="w-full h-full object-cover opacity-50 group-hover:opacity-70 transition-opacity"/>
                    <div class="absolute inset-0 flex items-center justify-center border-4 border-transparent group-hover:border-gemes-gold transition-all duration-300 m-4">
                        <h4 class="font-heading text-2xl text-white uppercase bg-black/50 px-4 py-2">Serie de firma</h4>
                    </div>
                </div>

                <div class="group relative bg-zinc-900 overflow-hidden cursor-pointer border border-zinc-800">
                    <img src="/images/march.jpg" alt="Marching" class="w-full h-full object-cover opacity-50 group-hover:opacity-70 transition-opacity"/>
                    <div class="absolute inset-0 flex items-center justify-center border-4 border-transparent group-hover:border-gemes-gold transition-all duration-300 m-4">
                        <h4 class="font-heading text-2xl text-white uppercase bg-black/50 px-4 py-2">Marching</h4>
                    </div>
                </div>

                <div class="relative col-span-1 md:col-span-2 bg-zinc-800 overflow-hidden cursor-pointer flex items-center border border-zinc-800 group">
                    <div class="w-1/2 p-8 relative z-20 pointer-events-none">
                        <h4 class="font-heading text-3xl text-gemes-gold uppercase mb-2">Accesorios</h4>
                        <p class="text-zinc-400 mb-4">Pads, estuches, llaves y repuestos.</p>
                        <span class="text-white font-bold underline decoration-gemes-gold underline-offset-4">Ver Todo</span>
                    </div>

                    <div class="absolute right-0 top-0 w-2/3 h-full z-10">
                        
                        <img 
                            src="/images/bolsa.png" 
                            class="carousel-img absolute inset-0 w-full h-full object-cover opacity-60 transition-opacity duration-1000" 
                            style="opacity: 1;" 
                        />
                        
                        <img 
                            src="/images/baquetas.png" 
                            class="carousel-img absolute inset-0 w-full h-full object-cover opacity-0 transition-opacity duration-1000" 
                        />
                        
                        <img 
                            src="/images/bolsaba.png" 
                            class="carousel-img absolute inset-0 w-full h-full object-cover opacity-0 transition-opacity duration-1000" 
                        />
                        
                        <div class="absolute inset-0 bg-gradient-to-r from-zinc-800 via-zinc-800/80 to-transparent"></div>
                    </div>
                </div>

            </div>
        </div>
        
        <script>
            let currentSlide = 0;
            const slides = Array.from(document.querySelectorAll('.carousel-img'));
            
            if(slides.length > 0) {
                setInterval(() => {
                    const slideActual = slides[currentSlide];
                    if (slideActual instanceof HTMLElement) {
                        slideActual.style.opacity = '0';
                    }

                    currentSlide = (currentSlide + 1) % slides.length;

                    const slideSiguiente = slides[currentSlide];
                    if (slideSiguiente instanceof HTMLElement) {
                        slideSiguiente.style.opacity = '1'; 
                    }
                }, 3000); 
            }
        </script>
    </section>
<section id="artistas" class="bg-zinc-900 py-24 border-t border-zinc-800 scroll-mt-20">
        <div class="max-w-7xl mx-auto px-4">
            
            <div class="flex flex-col md:flex-row justify-between items-end mb-16 gap-8">
                <div class="max-w-2xl">
                    <h3 class="font-heading text-4xl md:text-5xl text-white uppercase mb-4">
                        Familia de Artistas
                    </h3>
                    <p class="text-xl text-zinc-400 font-light tracking-wide">
                        EXPLORA EL SONIDO A TRAVÉS DE NUESTRA FAMILIA GEMES.
                    </p>
                </div>
                
                <a href="#" class="bg-gemes-gold text-black font-heading font-bold uppercase tracking-wider py-3 px-8 hover:bg-white transition-colors duration-300 text-lg shadow-lg shadow-gemes-gold/20">
                    Únete a la familia
                </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                
                <div class="group cursor-pointer">
                    <div class="overflow-hidden mb-6 relative border border-zinc-800 bg-zinc-950 aspect-[3/4]">
                        <img 
                            src="/images/arista1.jpg" 
                            class="w-full h-full object-cover object-top grayscale group-hover:grayscale-0 transition-all duration-500 group-hover:scale-105" 
                            alt="Griselda Mendoza"
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-transparent to-transparent opacity-60 group-hover:opacity-40 transition-opacity duration-300"></div>
                        
                        <div class="absolute bottom-4 left-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300 transform translate-y-2 group-hover:translate-y-0">
                             <span class="text-gemes-gold font-bold text-sm uppercase tracking-widest">Ver perfil</span>
                        </div>
                    </div>
                    
                    <div class="text-center">
                        <h4 class="text-white font-heading text-2xl uppercase tracking-widest group-hover:text-gemes-gold transition-colors">
                            Griselda Mendoza 
                        </h4>
                        <p class="text-zinc-500 text-sm uppercase tracking-wider mt-2 font-bold">
                            PRIMER ARTISTA DRUMER GIRL
                        </p>
                    </div>
                </div>

                <div class="group cursor-pointer">
                    <div class="overflow-hidden mb-6 relative border border-zinc-800 bg-zinc-950 aspect-[3/4]">
                        <img 
                            src="/images/arista2.jpg" 
                            class="w-full h-full object-cover object-top grayscale group-hover:grayscale-0 transition-all duration-500 group-hover:scale-105" 
                            alt="Ignacio Andrés"
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-transparent to-transparent opacity-60 group-hover:opacity-40 transition-opacity duration-300"></div>
                    </div>
                    <div class="text-center">
                        <h4 class="text-white font-heading text-2xl uppercase tracking-widest group-hover:text-gemes-gold transition-colors">
                            Ignacio Andrés 
                        </h4>
                        <p class="text-zinc-500 text-sm uppercase tracking-wider mt-2 font-bold">
                            FULL ENDORS
                        </p>
                    </div>
                </div>

                <div class="group cursor-pointer">
                    <div class="overflow-hidden mb-6 relative border border-zinc-800 bg-zinc-950 aspect-[3/4]">
                        <img 
                            src="/images/arista3.jpg" 
                            class="w-full h-full object-cover object-top grayscale group-hover:grayscale-0 transition-all duration-500 group-hover:scale-105" 
                            alt="Yeyo M. Guzmán"
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-transparent to-transparent opacity-60 group-hover:opacity-40 transition-opacity duration-300"></div>
                    </div>
                    <div class="text-center">
                        <h4 class="text-white font-heading text-2xl uppercase tracking-widest group-hover:text-gemes-gold transition-colors">
                            Yeyo M. Guzmán 
                        </h4>
                        <p class="text-zinc-500 text-sm uppercase tracking-wider mt-2 font-bold">
                            DIRECTOR DE ARTISTAS
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </section>

    
    <section id="catalogo" class="bg-black py-24 border-t border-zinc-900">
        <div class="max-w-6xl mx-auto px-4">
            <div class="text-center mb-16">
                <h3 class="font-heading text-5xl text-white uppercase">Nuevos Lanzamientos</h3>
                <div class="h-1 w-24 bg-gemes-gold mx-auto mt-4"></div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {featuredProducts.map((p) => (
                    <ProductCard 
                        model={p.model}
                        brand={p.brand}
                        material={p.material}
                        price={p.price}
                        image={p.image}
                    />
                ))}
            </div>
            
            <div class="text-center mt-16">
                <a href="/catalogo" class="inline-block border border-zinc-700 text-zinc-300 hover:text-gemes-gold hover:border-gemes-gold px-12 py-4 uppercase font-heading tracking-widest transition-all">
                    Ver todo el catálogo
                </a>
            </div>
        </div>
    </section>

</Layout>