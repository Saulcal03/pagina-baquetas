---
// Aquí recibimos los datos de cada baqueta
const { model, brand, material, price, image } = Astro.props;
---

<div class="bg-zinc-900 border border-zinc-800 rounded-xl overflow-hidden hover:shadow-xl hover:shadow-orange-500/20 hover:-translate-y-1 transition-all duration-300 group">
    <div class="h-64 overflow-hidden relative">
        <img 
            src={image} 
            alt={model} 
            class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-opacity"
        />
        <div class="absolute bottom-0 left-0 bg-gemes-gold text-black text-white text-xs font-bold px-3 py-1 rounded-tr-lg">
            {brand}
        </div>
    </div>

    <div class="p-5">
        <h3 class="text-xl font-bold text-white mb-1">{model}</h3>
        <p class="text-zinc-400 text-sm mb-4">Material: <span class="text-gemes-gold">{material}</span></p>
        
        <div class="flex items-center justify-between mt-4">
            <span class="text-2xl font-bold text-white">${price}</span>
            <button class="bg-white text-black font-semibold px-4 py-2 rounded-lg hover:bg-gemes-gold hover:text-black hover:text-white transition-colors">
                Ver más
            </button>
        </div>
    </div>
</div>